<!--<h1>To Remeber words</h1>-->

<%= javascript_include_tag 'hidden.js' %>
<div class="panel panel-default">
  <div class="panel-heading"> 
    <%= link_to '登録', new_word_path %>
    <%= link_to 'テスト',words_confirm_path %>
  </div>
   <% form_tag "/say_hello/hello_world" do %>
   <%= text_field_tag :greeting %>
   <%= submit_tag "Greeting" %>
   <% end %>
   <%= @greeting %>
  <table class="table">
    <thead>
      <tr>
      <!--  <th>Uid</th> -->
        <th>Wid</th> 
        <th>単語</th>
        <th>和訳</th>
        <th>Remember </th>

        <th> 
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @words.each do |word| %>
          <tr>
            <td><%= word.wid %></td>
            <td><%= word.wordbody %></td>
            <td id="jpbody" type="hidden"><%= word.jpbody %></td>
            <td><%= word.remember %></td>
            <td> <div class="btn-group" id="button"><button type="button" id="button" onClick="clicked()">表示・非表示</button></div></td>

            <td display="none"><%= word.wid %></td>
            <td><%= link_to 'Show', word %></td>
            <td><%= link_to 'Edit', edit_word_path(word) %></td>
            <td id="btn"><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>  
    </tbody>
  </table>
  <br>
</div>
